<tiles-definitions>
    <definition name="baseLayout" 
                template="/WEB-INF/layout/base.jsp">
        <put-attribute name="header" value="/WEB-INF/layout/header.jsp" />
        <put-attribute name="footer" value="/WEB-INF/layout/footer.jsp" /> 
        <put-attribute name="content" value="Welcome to our Websites!!!" />
        <put-attribute name="title" value="SaleApp" />
    </definition>
    <definition name="home" extends="baseLayout">
        <put-attribute name="title" value="Trang chủ" />
        <put-attribute name="content" value="/WEB-INF/pages/home.jsp" />
    </definition>
    <definition name="product" extends="baseLayout">
        <put-attribute name="title" value="Sản phẩm" />
        <put-attribute name="header" value="/WEB-INF/layout/headerAdmin.jsp" />
        <put-attribute name="content" value="/WEB-INF/pages/product.jsp" />
    </definition>
    <definition name="cart" extends="baseLayout">
        <put-attribute name="title" value="Giỏ hàng" />
        <put-attribute name="content" value="/WEB-INF/pages/cart.jsp" />
    </definition>
    <definition name="login" extends="baseLayout">
        <put-attribute name="title" value="Login" />
        <put-attribute name="content" value="/WEB-INF/pages/login.jsp" />
    </definition>
    <definition name="register" extends="baseLayout">
        <put-attribute name="title" value="Register" />
        <put-attribute name="content" value="/WEB-INF/pages/register.jsp" />
    </definition>
    <definition name="stats" extends="baseLayout">
        <put-attribute name="title" value="Order Stats" />
        <put-attribute name="content" value="/WEB-INF/pages/stats.jsp" />
    </definition>
    <definition name="admin" extends="baseLayout">
        <put-attribute name="title" value="Admin Home" />
        <put-attribute name="header" value="/WEB-INF/layout/headerAdmin.jsp" />
        <put-attribute name="content" value="/WEB-INF/pages/homeAdmin.jsp" />
    </definition>
        
</tiles-definitions>
